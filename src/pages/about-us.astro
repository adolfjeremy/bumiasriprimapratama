---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import OurJourney from "../components/OurJourney.astro";
import Capability from "../components/Capability.astro";
import VisionMission from "../components/VisionMission.astro";
import OrgChart from "../components/OrgChart.astro";
import Closing from "../components/Closing.astro";
import CTA from "../components/CTA.astro";

import aboutImage from "../assets/images/hero-about-us.png";

const schema = [
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    name: "PT Bumi Asri Prima Pratama",
    alternateName: "BAPP",
    url: "https://bumiasriprimapratama.com",
    logo: "https://bumiasriprimapratama.com/logo.png",
    foundingDate: "2004",
    industry: "Fuel Distribution and Marine Energy",
    description:
      "PT Bumi Asri Prima Pratama (BAPP) is an Indonesian fuel distribution and marine energy company providing High Speed Diesel, Marine Fuel Oil, bunker services, ship-to-ship operations, and floating storage infrastructure across Indonesia.",
    areaServed: {
      "@type": "Country",
      name: "Indonesia",
    },
    sameAs: [],
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: "https://bumiasriprimapratama.com",
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "About Us",
        item: "https://bumiasriprimapratama.com/about-us/",
      },
    ],
  },
  {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "H. Hutomo Mandala Putra",
    jobTitle: "Owner",
    worksFor: {
      "@type": "Organization",
      name: "PT Bumi Asri Prima Pratama",
    },
  },
];
---

<BaseLayout
  title="About PT Bumi Asri Prima Pratama (BAPP) | Energy & Fuel Company Indonesia"
  description="Learn about PT Bumi Asri Prima Pratama (BAPP), an Indonesian fuel distribution and marine energy company operating since 2004 with structured governance and strategic fuel infrastructure."
  schema={schema}
>
  <Hero
    title="Building Reliable Energy Infrastructure Since 2004"
    subtitle="PT Bumi Asri Prima Pratama (BAPP) is an Indonesian fuel distribution and marine energy company committed to operational reliability, structured governance, and long-term industrial partnerships."
    background={aboutImage}
  />
  <OurJourney />
  <VisionMission />
  <Capability />
  <OrgChart />
  <Closing />
  <CTA />
</BaseLayout>
