---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import servicesBg from "../assets/images/services-bg.png";
import StrategicOverview from "../components/StrategicOverview.astro";
import ServiceList from "../components/ServiceList.astro";
import Operational from "../components/Operational.astro";
import CoverageDelivery from "../components/CoverageDelivery.astro";
import ServiceCTA from "../components/ServiceCTA.astro";

const schema = [
  {
    "@context": "https://schema.org",
    "@type": "Service",
    name: "Fuel Distribution Indonesia",
    provider: {
      "@type": "Organization",
      name: "PT Bumi Asri Prima Pratama",
      url: "https://bumiasriprimapratama.com",
    },
    areaServed: {
      "@type": "Country",
      name: "Indonesia",
    },
    serviceType: [
      "High Speed Diesel (HSD) Trading",
      "Marine Fuel Oil (MFO) Supply",
      "Bunker Services & Ship-to-Ship (STS)",
      "Floating Storage Unit (FSU)",
    ],
    description:
      "Integrated fuel distribution services across Indonesia serving industrial, marine, offshore, and mining sectors.",
  },
];
---

<BaseLayout
  title="Fuel Distribution Indonesia | Marine & Industrial Fuel Supply – BAPP"
  description="PT Bumi Asri Prima Pratama provides fuel distribution services across Indonesia including High Speed Diesel (HSD), Marine Fuel Oil (MFO), bunker services, and Floating Storage Unit (FSU) infrastructure."
  schema={schema}
>
  <Hero
    title="Fuel Distribution Indonesia for Industrial & Marine Operations"
    subtitle="Delivering High Speed Diesel (HSD), Marine Fuel Oil (MFO), Ship-to-Ship (STS) bunker operations, and strategic floating storage solutions across Indonesia’s industrial and maritime corridors."
    background={servicesBg}
  />
  <StrategicOverview />
  <ServiceList />
  <Operational />
  <CoverageDelivery />
  <ServiceCTA />
</BaseLayout>
