---
import { Image } from "astro:assets";
import ctaBg from "../assets/images/cta_bg.png";
import Button from "./Button.astro";
---

<section
  class="relative py-20 md:py-28 min-h-[80svh] text-white text-center overflow-hidden flex items-center justify-center"
>
  <!-- Background -->
  <Image
    src={ctaBg}
    alt="oil tanker sailing"
    class="absolute inset-0 w-full h-full object-cover"
    quality={100}
    format="webp"
    loading="eager"
    fetchpriority="high"
  />

  <div
    class="absolute inset-0
        bg-gradient-to-t
        from-black/80
        via-black/60
        to-black/30"
  >
  </div>
  <div
    class="relative px-[16px] md:px-[64px] lg:px-[80px] flex flex-col items-center justify-center gap-6"
  >
    <h2
      class="text-2xl md:text-3xl lg:text-4xl font-bold text-white leading-tights"
    >
      Secure Reliable Fuel Supply for Your Operations
    </h2>

    <p class="text-white/80 text-lg leading-relaxed">
      Partner with BAPP for dependable High Speed Diesel, Marine Fuel Oil, and
      bunker services tailored to your operational scale and supply
      requirements.
    </p>

    <Button href="/contact" />
  </div>
</section>
